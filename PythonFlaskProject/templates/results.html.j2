
{% extends 'base.html.j2' %}

{% block head %}
<link rel="stylesheet" href="../static/style.css">
{% endblock %}

{% block title %}
PythonFlaskProject
{% endblock %}

{% block body %}

{% if works == False %}
  {% if is_secret == ['no'] %}
  <h3>Rejected! You've insulted the form!</h3>
  {% else %}

  <h3>Rejected! You didn't enter all of the inputs!</h3>
  {% endif %}

{% else %}
<!-- Code for the navbar modified from the example on bootstrap: https://getbootstrap.com/docs/4.1/components/navbar/ -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="">Super Secret Login</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <span class="navbar-text">
    Welcome, {{name}}
  </span>
</nav>

<h3>You are now in super secret mode.</h3>
<p>Login successfull</p>
<br>
<h4>Your Favorite Website is {{url}}</h4>

{% endif %}
{% endblock %}
